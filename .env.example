# API Keys
ANTHROPIC_API_KEY=your-key-here
OPENAI_API_KEY=your-key-here

LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=smarttask-faq-eval
ENABLE_LANGSMITH=true

# Database
POSTGRES_USER=smarttask
POSTGRES_PASSWORD=smarttask_password_2024
POSTGRES_DB=smarttask_faq
DATABASE_URL=postgresql+asyncpg://smarttask:smarttask_password_2024@postgres:5432/smarttask_faq

# Redis
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# Application
APP_NAME=SmartTask FAQ Service
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# LLM Settings
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.2
MAX_RESPONSE_TOKENS=500

# Embeddings
EMBEDDING_MODEL=russian
